{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./src/dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node", "express", "http-errors", "jsonwebtoken", "multer"]
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules"]
}
